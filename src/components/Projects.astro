---
import ReactIcon from "./icons/React.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import JS from "./icons/JS.astro";
import Button from "./Button.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-black",
    icon: ReactIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  JS: {
    name: "JavaScript",
    class: "bg-yellow-200 text-black",
    icon: JS,
  },
};

const PROJECTS = [
  {
    title: "Finder para recomendaciones de productos – GoPro",
    description:
      "Cuestionario interactivo diseñado para recomendar el producto ideal de GoPro en cada ocasión. Optimizado en SEO, rendimiento y accesibilidad (ADA compliance), asegurando una experiencia inclusiva y de alto desempeño.",
    link: "https://gopro.com/en/gt/shop/product-finder?srsltid=AfmBOor_wQ7IjZVBdtAXCpzcg9QSJXh4KNTsxt4fVn06nnmAF3TMV0bv",
    github: "",
    image: "/projects/gopro.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.JS],
  },
  {
    title: "Finder para recomendaciones de productos – benchmade",
    description:
      "Cuestionario interactivo diseñado para recomendar el producto ideal de GoPro en cada ocasión. Optimizado en SEO, rendimiento y accesibilidad (ADA compliance), asegurando una experiencia inclusiva y de alto desempeño.",
    link: "https://www.benchmade.com/pages/knife-finder",
    github: "",
    image: "/projects/bechmade.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.JS],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, link }) => (
    <article class="flex flex-row gap-8">
      <div>
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-4 flex-row mb-4">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2.5`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      </div>
      <div class="flex flex-col gap-y-4">
        <img
          class="rounded shadow-2xl shadow-white/10 "
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <Button class="flex flex-row gap-x-2 w-1/3 h-8 justify-center items-center cursor-pointer" text="Link" link={link}/>
      </div>
    </article>
  ))
}
